	<table class="table table-bordered">
  		<thead>
    		<tr>
    			<th>id</th>
      			<th>Title</th>
      			<th>Fecha creacion</th>
      			<th>Fecha modificacion</th>
      			<th>Cantidad comentarios</th>
      			<th>Cantidad likes</th>
      			<th>Cantidad palabras</th>
    		</tr>
  		</thead>
  	<tbody>
    	<% @posts.each do |post| %>
      		<tr>
	        <td><%= post.id %></td>
	        <td><%= post.title %></td>
	        <td><%= post.created_at %></td>
	        <td><%= post.updated_at %></td>
	        <td><%= post.reviews.length%></td>
	        <td><%= post.like %></td>
	        <td><%= post.body.split(' ').length %></td>
      		</tr>
    	<% end %>
  	</tbody>
	</table>







</html>