<h1>Listing posts</h1>
<body>
<form>
  <label>palabra :</label>
<input name="q" <%=@q%>>
<label>categoria :</label>
<input name="p" <%=@p%>>
<button type="submit">Buscar</button>
</form>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="4">Opciones y Datos</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.category %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= post.created_at %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</body>
